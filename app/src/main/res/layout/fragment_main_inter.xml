<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inter.MainInterFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_actclass"
            android:id="@+id/btn_actclass"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_indus"
            android:id="@+id/btn_indus"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_actclass" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_term"
            android:id="@+id/btn_term"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_indus" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_local"
            android:id="@+id/btn_local"
            android:layout_alignBottom="@+id/btn_term"
            android:layout_toEndOf="@+id/btn_term" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_list"

        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/btn_go"
        android:layout_above="@+id/btn_go">
        </android.support.v7.widget.RecyclerView>

</RelativeLayout>
