<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_marginBottom="8dp"
    android:layout_height="220dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
            <ImageView
                android:layout_width="41dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_note"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/text_writedate"
                android:paddingStart="41dp"
                android:paddingTop="13dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayout"
            android:background="@color/colorSingleLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:id="@id/linearLayout3">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_logo"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="16dp"
                android:layout_marginStart="13dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/text_classinfo"
                android:layout_marginTop="21dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/img_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/text_term"
                android:layout_marginTop="7dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/text_classinfo"
                android:layout_toEndOf="@+id/img_logo" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="34dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/text_comment"
                android:layout_marginTop="13dp"
                android:layout_marginStart="18dp"
                android:layout_below="@+id/img_logo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RatingBar
            android:layout_width="73dp"
            android:layout_height="13dp"
            android:id="@+id/ratebar"
            android:isIndicator="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="4"
            android:id="@+id/text_rate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/linearLayout3"
            android:layout_toEndOf="@+id/ratebar" />

    </RelativeLayout>
</android.support.v7.widget.CardView>