<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_height="275dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="11dp"
    android:layout_marginBottom="64dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_name"
            android:layout_marginTop="19dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/main_bluebox2"
            android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/test_level"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:gravity="center"
                    android:id="@+id/text_level" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/test_result"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:gravity="center"
                    android:id="@+id/text_info"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/question_title"
            android:id="@+id/textView50"
            android:layout_marginTop="28dp"
            android:layout_marginStart="18dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_question"
            android:layout_below="@+id/textView50"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/answer_title"
            android:id="@+id/textView52"
            android:layout_below="@+id/text_question"
            android:layout_marginStart="18dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_answer"
            android:layout_below="@+id/textView52"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:id="@+id/btn_detail"
            android:background="@null"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/text_answer" />

    </RelativeLayout>

</android.support.v7.widget.CardView>