<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_height="275dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/linearLayout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5"
                android:id="@+id/text_rate" />

            <RatingBar
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:id="@+id/ratebar"
                android:isIndicator="true"
                android:layout_below="@+id/text_rate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/text_comment"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ratebar" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSingleLine"
            android:id="@+id/line"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentStart="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="도움되는 점"
                android:id="@+id/textView20"
                android:textColor="@color/colorTextGood"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:textSize="13dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="46dp"
                android:textSize="15dp"
                android:textColor="@color/colorBasicTextGray"
                android:text="Medium Text"
                android:id="@+id/text_commendgood"
                android:layout_marginTop="3dp"
                android:layout_marginStart="12dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="아쉬운 점"
                android:textSize="13dp"
                android:textColor="@color/colorTextBad"
                android:id="@+id/textView22"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:layout_below="@+id/text_commendgood"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="46dp"
                android:textSize="15dp"
                android:textColor="@color/colorBasicTextGray"
                android:text="Medium Text"
                android:id="@+id/text_commentbad"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/textView22"
                android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="328dp"
                android:layout_height="193dp"
                android:background="@drawable/box_white">

                <Button
                    android:layout_width="175dp"
                    android:layout_height="42dp"
                    android:text=""
                    android:id="@+id/btn_detail"
                    android:background="@drawable/ic_usepoint"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>