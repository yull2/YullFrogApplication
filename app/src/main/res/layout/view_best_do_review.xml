<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_height="324dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="11dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_logo"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="17dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_name"
            android:layout_marginTop="19dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_logo" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:gravity="end"
            android:background="@drawable/main_starbox"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3"
            android:id="@+id/text_rate"
            android:paddingEnd="7dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/text_name"
            android:layout_toEndOf="@+id/img_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/text_info"
            android:layout_marginTop="15dp"
            android:layout_marginStart="6dp"
            android:layout_below="@+id/text_name"
            android:layout_toEndOf="@+id/text_rate" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorSingleLine"
            android:layout_below="@+id/text_rate"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/text_comment"
            android:layout_below="@+id/img_logo"
            android:layout_marginTop="17dp"
            android:layout_marginStart="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/comment_good_title"
            android:id="@+id/textView50"
            android:layout_marginTop="28dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/text_comment"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_question"
            android:layout_below="@+id/textView50"
            android:layout_marginTop="9dp"
            android:layout_marginStart="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/comment_bad_title"
            android:id="@+id/textView52"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_below="@+id/text_question"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_commentbad"
            android:layout_below="@+id/textView52"
            android:layout_marginStart="17dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:id="@+id/btn_detail"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/text_commentbad"
            android:layout_alignEnd="@+id/text_commentbad" />
    </RelativeLayout>

</android.support.v7.widget.CardView>