<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_height="275dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_classinfo"
            android:layout_marginTop="19dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/text_classinfo"
            android:layout_marginStart="18dp"
            android:background="@drawable/main_bluebox2"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/test_level"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:gravity="center"
                android:id="@+id/text_level" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/test_result"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:gravity="center"
                android:id="@+id/text_result"/>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/question_title"
                android:id="@+id/textView50"
                android:layout_marginTop="28dp"
                android:layout_marginStart="18dp"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/text_question"
                android:layout_below="@+id/textView50"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/answer_title"
                android:id="@+id/textView52"
                android:layout_below="@+id/text_question"
                android:layout_marginStart="18dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/text_answer"
                android:layout_below="@+id/textView52"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_white">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="175dp"
                android:layout_height="42dp"
                android:text=""
                android:background="@drawable/ic_usepoint"
                android:id="@+id/btn_detail"
                android:layout_marginTop="76dp"
                android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>