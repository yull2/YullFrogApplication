<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_homemain"
            android:layout_width="328dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg_top" />

        <ImageView
            android:id="@+id/image_homestart"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/image_homemain"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/image_homeend"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/image_homestart"
            android:layout_toEndOf="@+id/image_homestart" />


</RelativeLayout>